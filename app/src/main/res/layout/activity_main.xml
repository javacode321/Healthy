<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.demo.healthy.MainActivity">

    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp"
                 android:layout_weight="1" android:id="@+id/content"></FrameLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                  android:orientation="horizontal" android:background="#555555">

        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                        android:onClick="tab"
                        android:id="@+id/rl_sc">
            <ImageView android:layout_width="30dp" android:layout_height="30dp"
                       android:src="@mipmap/ic_launcher" android:layout_alignParentTop="true"
                       android:layout_centerHorizontal="true" android:id="@+id/iv_sc"/>
            <TextView
                    android:text="食材"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_sc" android:layout_below="@+id/iv_sc" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                        android:onClick="tab"
                        android:id="@+id/rl_cp">
            <ImageView android:layout_width="30dp" android:layout_height="30dp"
                       android:src="@mipmap/ic_launcher" android:layout_alignParentTop="true"
                       android:layout_centerHorizontal="true" android:id="@+id/iv_cp"/>
            <TextView
                    android:text="菜谱"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_cp" android:layout_below="@+id/iv_cp" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                        android:onClick="tab"
                        android:id="@+id/rl_sz">
            <ImageView android:layout_width="30dp" android:layout_height="30dp"
                       android:src="@mipmap/ic_launcher" android:layout_alignParentTop="true"
                       android:layout_centerHorizontal="true" android:id="@+id/iv_sz"/>
            <TextView
                    android:text="手账"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_sz" android:layout_below="@+id/iv_sz" android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
